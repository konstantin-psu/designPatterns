#!/bin/sh

if [ "$1" = "" ]; then
    echo need directory argument; exit 
fi

cd $1
rm -f index.html

echo "<!-- Generated by makeindex on" `date` "-->" >> index.html

cat >> index.html << EOF
<HTML>
<HEAD><TITLE>Project files</TITLE></HEAD>
<BODY BGCOLOR=#CCCCCC>
<H2>Files in this project</H2>
<BLOCKQUOTE>
EOF

for i in `find . -name "*.java" | sort`; do
    name=`echo $i | sed -e "s#^./##"`
    echo "<A HREF=\"$i\">$name</A><BR>" >> index.html
done

cat >> index.html << EOF
</BLOCKQUOTE>
</BODY>
</HTML>
EOF
